<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard1.6;net4</TargetFrameworks>
    <AssemblyName>PactNet</AssemblyName>
    <PackageId>PactNet</PackageId>
    <Description>A .NET version of Pact, which enables consumer driven contract testing.</Description>
    <Product>PactNet</Product>
    <Version>1.0.0.0</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <AssemblyVersion>0.0.0.1</AssemblyVersion>
    <FileVersion>0.0.0.1</FileVersion>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard1.6'">
    <DefineConstants>$(DefineConstants);LIBLOG_PORTABLE</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="LibLog" Version="4.2.2" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.6'">
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
    <PackageReference Include="Nancy" Version="2.0.0-clinteastwood" />
    <PackageReference Include="Microsoft.AspNetCore.Server.Kestrel" Version="1.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Owin" Version="1.0.0" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net4'">
    <PackageReference Include="Nancy" Version="0.23.1" />
    <PackageReference Include="Nancy.Hosting.Self" Version="0.23.1" />
    <PackageReference Include="Newtonsoft.Json" Version="6.0.3" />
    <PackageReference Include="Microsoft.Net.Http" Version="2.2.28" />
  </ItemGroup>
</Project>